<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_primary">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Profile"
            app:titleTextColor="@color/text_white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="88dp">

            <!-- Profile Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/white"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp"
                    android:gravity="center_horizontal">

                    <!-- Profile Avatar -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="60dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="3dp"
                        app:strokeColor="@color/green_primary"
                        app:cardBackgroundColor="@android:color/transparent">
                        
                        <ImageView
                            android:id="@+id/ivProfilePicture"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_food_banner"
                            android:scaleType="centerCrop"
                            android:contentDescription="Profile picture"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless"/>
                            
                    </com.google.android.material.card.MaterialCardView>

                    <!-- User Name -->
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Name"
                        android:textColor="@color/text_primary"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.02"
                        android:layout_marginBottom="8dp"/>

                    <!-- User Type Badge -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/green_primary_light"
                        app:strokeWidth="0dp">

                        <TextView
                            android:id="@+id/tvUserType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Customer"
                            android:textColor="@color/green_primary"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="6dp"
                            android:letterSpacing="0.05"/>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Edit Profile Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Edit Profile"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="28dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/green_primary"
                        app:backgroundTint="@android:color/transparent"
                        android:textColor="@color/green_primary"
                        app:icon="@android:drawable/ic_menu_edit"
                        app:iconTint="@color/green_primary"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Personal Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_info_details"
                            android:tint="@color/green_primary"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Personal Information"
                            android:textColor="@color/text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.02"/>

                    </LinearLayout>

                    <!-- Email Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="false"
                        android:focusable="false">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_dialog_email"
                            android:tint="@color/green_primary"
                            android:layout_marginEnd="16dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textColor="@color/text_secondary"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.02"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/tvEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="user@example.com"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginVertical="4dp"/>

                    <!-- Phone Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="false"
                        android:focusable="false">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_call"
                            android:tint="@color/green_primary"
                            android:layout_marginEnd="16dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone"
                                android:textColor="@color/text_secondary"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.02"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/tvPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not set"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginVertical="4dp"/>

                    <!-- Address Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="top"
                        android:paddingVertical="16dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="false"
                        android:focusable="false">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_menu_mylocation"
                            android:tint="@color/green_primary"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="2dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address"
                                android:textColor="@color/text_secondary"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.02"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/tvAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Not set"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:lineSpacingExtra="2dp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Delete Account Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteAccount"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Delete Account"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_white"
                app:cornerRadius="28dp"
                app:backgroundTint="@color/error"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconTint="@color/text_white"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                android:layout_marginTop="8dp"/>

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Logout"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_white"
                app:cornerRadius="28dp"
                app:backgroundTint="@color/error"
                app:icon="@android:drawable/ic_menu_close_clear_cancel"
                app:iconTint="@color/text_white"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                android:layout_marginTop="12dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Food Loader -->
    <com.fp.foodorderingsystem.ui.FoodLoaderView
        android:id="@+id/loaderView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/customer_menu"
        app:itemIconTint="@color/bottom_nav_selector"
        app:itemTextColor="@color/bottom_nav_selector"
        app:labelVisibilityMode="labeled"
        app:backgroundTint="@color/white"
        app:itemRippleColor="@color/green_primary_light"
        android:elevation="12dp"
        app:itemHorizontalTranslationEnabled="true"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

