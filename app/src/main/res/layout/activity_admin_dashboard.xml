<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.admin.AdminDashboardActivity">

    <!-- Main Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_admin_dashboard">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        android:elevation="4dp"
        android:background="@color/green_primary">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/green_primary"
            app:title="Admin Dashboard"
            app:subtitle="Monitor restaurant health"
            app:subtitleTextColor="@color/text_white"
            app:titleTextColor="@color/text_white"
            app:navigationIconTint="@color/text_white"
            app:contentInsetStartWithNavigation="0dp">

            <ImageView
                android:id="@+id/btnNotifications"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginEnd="12dp"
                android:padding="8dp"
                android:src="@drawable/ic_notifications"
                android:tint="#FFFFFF"
                android:contentDescription="Notifications"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

        <!-- Main Content - Optimized with ConstraintLayout -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:clipToPadding="false">

            <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:padding="16dp"
                android:paddingBottom="32dp">

            <!-- Admin Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAdminSummary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_card_highlight"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivAdminAvatar"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_avatar_circle"
                            android:padding="12dp"
                            android:src="@drawable/ic_user_add"
                            android:tint="@color/text_white"
                            android:contentDescription="Admin profile" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvGreetingTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Welcome back!"
                                android:textColor="@color/text_white"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvGreetingSubtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Track orders, revenue, and alerts in real time."
                                android:textColor="#E2F7EF"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipStatusLive"
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Live"
                            android:textAllCaps="false"
                            android:textColor="@color/text_white"
                            app:chipBackgroundColor="@color/green_primary"
                            app:chipIcon="@drawable/ic_notifications"
                            app:chipIconTint="@color/text_white"
                            app:chipIconVisible="true"
                            app:chipStrokeWidth="0dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSummaryHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Last sync • Just now"
                        android:textColor="#C7FFF0"
                        android:textSize="13sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Overview Filters -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipOverviewFilters"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:layout_constraintTop_toBottomOf="@id/cardAdminSummary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipToday"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Today" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipWeek"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This Week" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMonth"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This Month" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Section Header -->
            <TextView
                    android:id="@+id/tvSectionHeader"
                    android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Today's Overview"
                android:textColor="#212529"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintTop_toBottomOf="@id/chipOverviewFilters"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Stats Row 1 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTotalOrders"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/green_primary"
                    app:layout_constraintTop_toBottomOf="@id/tvSectionHeader"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cardTotalRevenue"
                    app:layout_constraintWidth_percent="0.48">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="18dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/bg_avatar_circle"
                                android:padding="6dp"
                                android:src="@drawable/ic_orders"
                                android:tint="@color/text_white"
                                android:contentDescription="Total orders icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                            android:text="Total Orders"
                            android:textColor="#E8F0FE"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvTotalOrders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:includeFontPadding="false" />

                        <TextView
                            android:id="@+id/tvTotalOrdersTrend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="+8% vs yesterday"
                            android:textColor="#EAF6FF"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTotalRevenue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#20C997"
                    app:layout_constraintTop_toTopOf="@id/cardTotalOrders"
                    app:layout_constraintStart_toEndOf="@id/cardTotalOrders"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.48">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="18dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/bg_avatar_circle"
                                android:padding="6dp"
                                android:src="@drawable/ic_wallet"
                                android:tint="@color/text_white"
                                android:contentDescription="Total revenue icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                            android:text="Total Revenue"
                            android:textColor="#E8F0FE"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvTotalRevenue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="₱0"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:includeFontPadding="false" />

                        <TextView
                            android:id="@+id/tvTotalRevenueTrend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="+₱2.1K vs last week"
                            android:textColor="#F3FFFB"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Stats Row 2 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPendingOrders"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#FFC107"
                    app:layout_constraintTop_toBottomOf="@id/cardTotalOrders"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cardCompletedOrders"
                    app:layout_constraintWidth_percent="0.48">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="18dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/bg_avatar_circle"
                                android:padding="6dp"
                                android:src="@drawable/ic_notifications"
                                android:tint="#212529"
                                android:contentDescription="Pending icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                            android:text="Pending"
                            android:textColor="#212529"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvPendingOrders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textColor="#212529"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:includeFontPadding="false" />

                        <TextView
                            android:id="@+id/tvPendingOrdersTrend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Need attention"
                            android:textColor="#6C4A00"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCompletedOrders"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#198754"
                    app:layout_constraintTop_toTopOf="@id/cardPendingOrders"
                    app:layout_constraintStart_toEndOf="@id/cardPendingOrders"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.48">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="18dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/bg_avatar_circle"
                                android:padding="6dp"
                                android:src="@drawable/ic_orders"
                                android:tint="@color/text_white"
                                android:contentDescription="Completed icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                            android:text="Completed"
                            android:textColor="#E8F0FE"
                                android:textSize="13sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvCompletedOrders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:includeFontPadding="false" />

                        <TextView
                            android:id="@+id/tvCompletedOrdersTrend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="92% fulfillment"
                            android:textColor="#D1FFE8"
                            android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Order Health -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardOrderHealth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintTop_toBottomOf="@id/cardPendingOrders"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvOrderHealthTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Order Health"
                                android:textColor="#1B1B1B"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvOrderHealthValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="92%"
                                android:textColor="@color/green_primary"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvOrderHealthSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="On-time fulfillment rate"
                            android:textColor="#6C757D"
                            android:textSize="13sp" />

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progressFulfillment"
                            style="@style/Widget.MaterialComponents.LinearProgressIndicator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:indeterminate="false"
                            android:progress="92"
                            app:indicatorColor="@color/green_primary"
                            app:trackColor="#FFECEFF1"
                            app:trackThickness="6dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_notifications"
                                android:tint="#6C757D"
                                android:contentDescription="Alerts icon" />

                            <TextView
                                android:id="@+id/tvOrderHealthHint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="2 delayed orders flagged for review."
                                android:textColor="#6C757D"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Analytics Section Header -->
            <TextView
                    android:id="@+id/tvAnalytics"
                    android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Analytics &amp; Insights"
                android:textColor="#212529"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintTop_toBottomOf="@id/cardOrderHealth"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Revenue Chart Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardRevenueChart"
                    android:layout_width="0dp"
                    android:layout_height="280dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintTop_toBottomOf="@id/tvAnalytics"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                            android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Revenue Trend"
                            android:textColor="#1B1B1B"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Last 7 days"
                            android:textColor="#6C757D"
                            android:textSize="13sp" />

                        <!-- Revenue Chart -->
                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/chartRevenue"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="16dp"
                            android:minHeight="180dp" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                <!-- Orders Chart Card -->
                    <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardOrdersChart"
                        android:layout_width="0dp"
                    android:layout_height="280dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintTop_toBottomOf="@id/cardRevenueChart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                        android:padding="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                            android:text="Orders Overview"
                            android:textColor="#1B1B1B"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Order status distribution"
                            android:textColor="#6C757D"
                            android:textSize="13sp" />

                        <!-- Orders Chart -->
                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/chartOrders"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="16dp"
                            android:minHeight="180dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Popular Items Chart Card -->
                    <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPopularItemsChart"
                        android:layout_width="0dp"
                    android:layout_height="280dp"
                    app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintTop_toBottomOf="@id/cardOrdersChart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                        android:padding="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                            android:text="Popular Items"
                            android:textColor="#1B1B1B"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Top selling items this week"
                            android:textColor="#6C757D"
                            android:textSize="13sp" />

                        <!-- Popular Items Chart -->
                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chartPopularItems"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="16dp"
                            android:minHeight="180dp" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@android:color/white"
        app:headerLayout="@layout/nav_header_admin"
        app:menu="@menu/empty_menu"
        app:itemIconTint="#212529"
        app:itemTextColor="#212529"
        app:itemRippleColor="#E9ECEF" />

</androidx.drawerlayout.widget.DrawerLayout>
